extends base

block content
  main.main
    .card-container
      each item in news 
        .card
          .card__header
            .card__picture
              
              img.card__picture-img(src=`/img/news/${item.photo}`, alt=`${item.name}`)
            h3.heading-tertirary
              span= item.name

          .news__details
            h4.card__sub-heading Краткое описание

            .news__data
              a.btn.btn--green.btn--small(href=`/news/${item.slug}`) Подробнее

            
            

